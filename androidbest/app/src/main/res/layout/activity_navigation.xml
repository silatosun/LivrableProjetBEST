<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.best.client.clientbest.Navigation"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#f86611">

                <ImageView
                    android:id="@+id/btext"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:hint="Buildings List"
                    android:src="@drawable/logo_best" /><![CDATA[


        />


    ]]>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


                <Button
                    android:id="@+id/localiser"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="25dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/naviglogo"
                    />

                <Button
                    android:id="@+id/alerte"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="25dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/alertericon" />

        </LinearLayout>


        <fr.best.client.clientbest.VuePlan
            android:id="@+id/maVue"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/imagePosition"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:visibility="invisible"
            android:contentDescription="@string/position"
            app:srcCompat="@drawable/imageposition" />
</android.widget.LinearLayout>
